@{
	ViewData["Title"] = "Product Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<EStore.DataModels.Product>

<div class="card">

	<div class="card-header">

		<h3 class="card-title">Product List</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
				<i class="fas fa-times"></i>
			</button>
		</div>

	</div>

	<div class="card-body">


		<table class="table table-hover">
			<thead class="table-info">
				<tr>
					<th class="col-1">Serial</th>
					<th class="col-1">Name</th>
					<th class="col-2">Description</th>
					<th class="col-1">Price</th>
					<th class="col-1">Category</th>
					<th class="col-2">Image</th>
					<th class="col-1">LabelId</th>
					<th class="col-1">Is Active</th>
					<th class="col-2">Action</th>
				</tr>
			</thead>

			<tbody>

				@{
					int serial = 1;
					foreach (var data in Model)
					{

						<tr>
							<td>@serial</td>
							<td>@data.Name</td>
							<td>@data.Description</td>
							<td>@data.Price</td>
							<td>@data.Category</td>
							<td>
								<img src="~/upload/@data.Image" style="width: 50%;" />
							</td>
							<td>@data.LableId</td>
							<td>@data.IsActive</td>
							<td>
								<a class="btn btn-success" asp-action="ProductEdit" asp-route-id="@data.ProductId">Edit</a>
								<a class="btn btn-danger" asp-action="ProductDelete" asp-route-id="@data.ProductId">Delete</a>
							</td>
						</tr>
						serial++;
					}
				}

			</tbody>

		</table>


	</div>

</div>

